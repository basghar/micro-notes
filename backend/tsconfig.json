{
   "compilerOptions": {
      "module": "esnext",
      "esModuleInterop": true,
      "target": "esnext",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "allowJs": false,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "baseUrl": "./src",
      "paths": {
         "@lib/*": ["lib/*"],
         "@config/*": ["config/*"]
      }
   },
   "include": ["src/**/*.ts"]
}
